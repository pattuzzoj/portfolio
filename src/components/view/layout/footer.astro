---
import SocialMedia from "@/components/social-media.astro";
import TechLabel from "@/components/tech-label.astro";
import { t } from "i18next";
---

<footer class="flex justify-center border-t-1 border-slate-700 py-8 px-8">
  <div class="w-full max-w-7xl space-y-16">
    <div class="flex flex-col gap-8 lg:flex-row">
      <div class="md:w-1/3">
        <h3>{t("footer.title")}</h3>
        <p>{t("footer.description")}</p>
      </div>
      <div class="md:w-1/3 space-y-2">
        <h4 id="menu">{t("footer.usefulLinks.title")}</h4>
        <nav aria-labelledby="menu" class="flex flex-col gap-2">
          {(t("footer.usefulLinks.menu", { returnObjects: true }) as unknown as {label: string, href: string}[]).map(({label, href}, index) => (
            <a class="text-white/60 hover:text-white" href={`#${href}`}>{label}</a>
          ))}
        </nav>
      </div>
      <div class="md:w-1/3">
        <h4 id="contact">{t("footer.connect")}</h4>
        <SocialMedia />
      </div>
    </div>
    <div class="flex flex-col gap-2">
      <p class="text-center text-slate-300">© 2025 Júlio Pattuzzo.</p>
      <p class="text-center space-x-2"><TechLabel>Astro</TechLabel><TechLabel>React</TechLabel><TechLabel>Tailwind</TechLabel></p>
    </div>
  </div>
</footer>