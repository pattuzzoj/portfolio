---
interface Props {
  id: string;
  title: string;
  subtitle: string;
  children: React.ReactNode;
}

const props = Astro.props;
---

<section id={props.id} class="space-y-8">
  <div class="space-y-2">
    <h2 class="text-center">{props.title}</h2>
    <h3 class="text-center text-slate-300">{props.subtitle}</h3>
  </div>
  <slot />
</section>