---
export const prerender = false;

import { render, getEntry, getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import TechLabel from "@/shared/components/tech-label.astro";
import i18n, { DEFAULT_LOCALE } from "@/shared/i18n";
import LinkedinIcon from "@/shared/assets/icons/linkedin.svg";
import RedditIcon from "@/shared/assets/icons/reddit.svg";
import WhatsappIcon from "@/shared/assets/icons/whatsapp.svg";
import Clipboard from "@/shared/components/clipboard";
import { buildHeadingTree, getRelatedPosts } from "@/features/blog/utils/blog";
import HeadingTree from "@/features/blog/components/tree-list";
import CardPost from "@/features/blog/components/card-post.tsx";
import PostLayout from "@/features/blog/layouts/post-layout.astro";
import { isArray } from "@utilify/core";

export const getStaticPaths = async () => {
  const blog = await getCollection("blog");

  return blog.flatMap((post) => {
    return [
      {
        params: {
          locale: "en",
          id: post.id.slice(3),
        },
      },
      {
        params: {
          locale: "pt",
          id: post.id.slice(3),
        },
      },
    ];
  });
};

const { locale = DEFAULT_LOCALE, id } = Astro.params;
const post = await getEntry("blog", "blog" + "/" + locale + "/" + id)!;
const { Content, headings } = await render(post);
const t = i18n.t;

const posts = await getCollection("blog", (post) => post.data.lang === locale);

const relatedPosts = getRelatedPosts(posts, {
  targetId: post.id,
  category: post.data.category,
  quantity: 3
});

const tree = buildHeadingTree(headings.slice(1));
const tags = post.data.tags?.split(",");
---

<PostLayout
  title={post?.data.title}
  description={post?.data.summary}
  keywords={post.data.tags}
  category={post.data.category}
  banner={post.data.coverImage}
>
  <div class="flex flex-col gap-8">
    <div class="space-y-4">
      <a
        class="w-fit flex items-center gap-2 hover:bg-fill-accent-hover text-link p-2 rounded-xl"
        href={t("blog:page.backToBlog.href")}
      >
        <Icon name="lucide:arrow-left" class="size-5" />
        {t("blog:page.backToBlog.label")}
      </a>
      <div class="w-full flex gap-32">
        <div class="w-2/3 flex flex-col justify-between gap-3">
          <div class="relative -z-10 w-full">
            <img
              class="h-96 w-full object-cover overflow-hidden rounded-xl"
              src={post.data.coverImage}
              alt=""
            />
            <div class="absolute top-3 right-3 flex items-center justify-between">
              <span
                class="flex items-center gap-1 text-sm text-ink-soft bg-black/30 rounded-full px-2 py-1"
              >
                <Icon name="lucide:clock" class="h-5" />
                {post.data.readingTime}
              </span>
            </div>
          </div>
          <div class="flex flex-col justify-between gap-3">
            <div class="flex items-center justify-between">
              <span
                class="w-fit text-xs border border-outline bg-fill-accent text-ink-on-accent rounded-full px-2 py-1"
                >{post.data.category}</span
              >
              <span class="flex items-center gap-1 text-sm text-ink-soft">
                <Icon name="lucide:calendar" class="h-5" />
                {post.data.date}
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="space-x-2">
                {isArray(tags) && tags.map((tag) => <TechLabel>{tag}</TechLabel>)}
              </span>
              <span class="flex items-center gap-1">
                <a aria-label="Whatsapp" class="rounded-xl p-2 hover:bg-green-500" href={`https://wa.me/?text=${encodeURIComponent(post.data.title + " " + post.data.url)}`} target="_blank">
                  <WhatsappIcon class="size-6" />
                </a>
                <a aria-label="Linkedin" class="rounded-xl p-2 hover:bg-blue-500" href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(post.data.url)}`} target="_blank">
                  <LinkedinIcon class="size-6" />
                </a>
                <a aria-label="Reddit" class="rounded-xl p-2 hover:bg-orange-500" href={`https://reddit.com/submit?url=${encodeURIComponent(post.data.url)}&title=${encodeURIComponent(post.data.title)}`} target="_blank">
                  <RedditIcon class="size-6" />
                </a>
                <Clipboard client:load />
              </span>
            </div>
          </div>
          <div>
            <!-- <Share2 /> -->
          </div>
          <Content />
        </div>
        <aside
          id="side-menu"
          class="w-1/3 hidden md:sticky top-32 -z-10 md:flex flex-col gap-8 h-fit"
        >
          <HeadingTree tree={tree} client:load />
        </aside>
      </div>
    </div>
    {isArray(relatedPosts) && relatedPosts.length > 0 && (
      <hr class="text-ink-muted">
      <div>
        <div class="space-y-8">
          <h3>{t("blog:page.sidebar.relatedPosts")}</h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
              isArray(relatedPosts) &&
                relatedPosts.length > 0 &&
                relatedPosts.map((post) => <CardPost {...post} client:load />)
            }
          </div>
        </div>
      </div>
    )}
  </div>
</PostLayout>
