---
import SocialMedia from "@/shared/components/social-media.astro";
import TechLabel from "@/shared/components/tech-label.astro";
import i18n from "@/shared/i18n";
import { isArray } from "@utilify/core";

const t = i18n.t;

const footerLinks = t("footer.usefulLinks.menu", { returnObjects: true }) as unknown as {label: string, href: string}[];
---

<footer class="flex justify-center border-t border-slate-700 py-8 px-8">
  <div class="w-full max-w-7xl space-y-16">
    <div class="flex flex-col gap-8 lg:flex-row">
      <div class="md:w-1/3">
        <h3 class="font-semibold! text-blue-400">{t("footer.title")}</h3>
        <p>{t("footer.description")}</p>
      </div>
      <div class="md:w-1/3 space-y-2">
        <h4 id="menu">{t("footer.usefulLinks.title")}</h4>
        <nav aria-labelledby="menu" class="flex flex-col gap-2">
          {isArray(footerLinks) && footerLinks.map(({label, href}) => (
            <a class="text-white/60 hover:text-white" href={href}>{label}</a>
          ))}
        </nav>
      </div>
      <div class="md:w-1/3">
        <h4 id="contact">{t("footer.connect")}</h4>
        <SocialMedia />
      </div>
    </div>
    <div class="flex flex-col gap-2">
      <p class="text-center text-slate-300">© 2025 Júlio Pattuzzo.</p>
      <p class="text-center space-x-2">
        <TechLabel>Astro</TechLabel>
        <TechLabel>React</TechLabel>
        <TechLabel>Tailwind</TechLabel>
        <TechLabel>i18n</TechLabel>
      </p>
    </div>
  </div>
</footer>